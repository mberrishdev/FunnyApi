<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Bored</title>
    <style>
        #relode {
            width: 50px;
            height: 50px;
        }
        #test {
            margin: auto;
            width: 50%;
            border: 3px solid green;
            padding: 10px;
            text-align: center;
        }

    </style>
</head>
<body onload="Data()">


   <div id="test"></div>
    


    <h6 id="type"></h6>



    <img id="relode"  onclick="Data()" src="~/relode.png"></img>

    <script>
        function Data() {
            const api_url =
                "https://www.boredapi.com/api/activity";

            async function getapi(url) {

                // Storing response
                const response = await fetch(url);

                // Storing data in form of JSON
                var data = await response.json();
                console.log(data);
                document.getElementById("test").innerHTML = "<a href = " + data.link + ">" + data.activity + "</a> ";
                document.getElementById("type").innerText = data.type;

            }

            getapi(api_url);
        }
    </script>
</body>
</html>